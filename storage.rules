rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to logos and document templates
    match /logos/{allPaths=**} {
      allow read;
    }
    match /document_templates/{allPaths=**} {
      allow read;
    }

    // Allow unauthenticated users to write to the temporary registration folder
    // but not read from it.
    match /registrations/{sessionId}/{allPaths=**} {
      allow write: if request.auth == null;
      allow read: if false;
    }

    // Allow authenticated users to read and write to their own user-specific folders.
    // This rule fixes the reported error.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
