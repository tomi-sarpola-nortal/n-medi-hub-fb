
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // PUBLIC: Logos and other public assets are publicly readable.
    match /logos/{allPaths=**} {
      allow read;
    }
    
    // AUTHENTICATED: Document templates are readable by any authenticated user.
    match /document_templates/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // UNAUTHENTICATED: Allow file uploads only to a temporary folder during the initial registration process.
    match /registrations/{sessionId}/{allPaths=**} {
      allow write: if request.auth == null;
    }

    // USER-SPECIFIC: Users can read and write to any file within their own user folder.
    // This allows them to read their permanent documents and write to pending folders when updating their profile.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
