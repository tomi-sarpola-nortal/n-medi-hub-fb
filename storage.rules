rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default rule: Allow authenticated users to read and write all files.
    // TODO: Implement more granular security rules for production.
    // For example, users should only be able to write to their own 'users/{uid}/' path.
    // Public assets like logos might have global read access.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
